{
  "components" : {
    "schemas" : {
      "uk.gov.hmrc.securemessage.models.api.Alert" : {
        "properties" : {
          "templateId" : {
            "description" : "email template ID",
            "type" : "string"
          },
          "parameters" : {
            "description" : "parameters that can be used inside the email",
            "nullable" : true,
            "type" : "object",
            "additionalProperties" : {
              "type" : "string"
            }
          }
        },
        "required" : [ "templateId" ]
      },
      "uk.gov.hmrc.securemessage.models.api.Enrolment" : {
        "properties" : {
          "key" : {
            "description" : "key of an enrolment e.g. HMRC-CUS-ORG",
            "type" : "string"
          },
          "name" : {
            "description" : "name of enrolment e.g. EORINumber",
            "type" : "string"
          },
          "value" : {
            "description" : "value of enrolment e.g. GB1234567890",
            "type" : "string"
          }
        },
        "required" : [ "key", "name", "value" ]
      },
      "uk.gov.hmrc.securemessage.models.api.Customer" : {
        "properties" : {
          "enrolment" : {
            "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.Enrolment"
          },
          "name" : {
            "description" : "customer name",
            "type" : "string",
            "nullable" : true
          },
          "email" : {
            "description" : "email of customer",
            "type" : "string",
            "nullable" : true
          }
        },
        "required" : [ "enrolment" ]
      },
      "uk.gov.hmrc.securemessage.models.api.Recipient" : {
        "properties" : {
          "customer" : {
            "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.Customer"
          }
        },
        "required" : [ "customer" ]
      },
      "uk.gov.hmrc.securemessage.models.api.System" : {
        "properties" : {
          "name" : {
            "description" : "calling system name e.g. CDCM",
            "type" : "string"
          },
          "parameters" : {
            "description" : "parameters that are optional for the calling service",
            "type" : "object",
            "additionalProperties" : {
              "type" : "string"
            }
          },
          "display" : {
            "type" : "string"
          }
        },
        "required" : [ "name", "parameters", "display" ]
      },
      "uk.gov.hmrc.securemessage.models.api.Sender" : {
        "properties" : {
          "system" : {
            "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.System"
          }
        },
        "required" : [ "system" ]
      },
      "uk.gov.hmrc.securemessage.models.api.ConversationRequest" : {
        "properties" : {
          "sender" : {
            "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.Sender"
          },
          "recipients" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.Recipient"
            }
          },
          "alert" : {
            "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.Alert"
          },
          "tags" : {
            "type" : "object",
            "additionalProperties" : {
              "type" : "string"
            }
          },
          "subject" : {
            "description" : "subject of the conversation",
            "type" : "string"
          },
          "message" : {
            "description" : "content of the message",
            "type" : "string"
          },
          "language" : {
            "description" : "language of the customer",
            "type" : "string",
            "nullable" : true
          }
        },
        "required" : [ "sender", "recipients", "alert", "tags", "subject", "message" ]
      }
    }
  },
  "openapi" : "3.0.3",
  "paths" : {
    "/secure-messaging/conversation/{client}/{conversationId}" : {
      "put" : {
        "operationId" : "createConversation",
        "tags" : [ "app" ],
        "summary" : "create a conversation",
        "requestBody" : {
          "description" : "A JSON object to create a new conversation",
          "required" : true,
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/uk.gov.hmrc.securemessage.models.api.ConversationRequest"
              }
            }
          }
        },
        "responses" : {
          "201" : {
            "description" : "conversation created successfully"
          },
          "400" : {
            "description" : "bad request such as an invalid payload"
          },
          "415" : {
            "description" : "unsupported media type - should be application/json"
          }
        },
        "parameters" : [ {
          "in" : "path",
          "name" : "client",
          "schema" : {
            "type" : "string"
          },
          "required" : true
        }, {
          "in" : "path",
          "name" : "conversationId",
          "schema" : {
            "type" : "string"
          },
          "required" : true
        } ]
      }
    }
  },
  "produces" : [ "application/json" ],
  "info" : {
    "title" : "Secure Message API",
    "version" : "0.12.0-SNAPSHOT"
  },
  "consumes" : [ "application/json" ],
  "tags" : [ {
    "name" : "app"
  } ]
}